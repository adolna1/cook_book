{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    <h1>{% trans %}recipes{% endtrans %}</h1>
    <div class="admin-add-button">
        <a class="btn btn-primary" href="{{ path('admin_recipes_new') }}" >{% trans %}add_recipes{% endtrans %}</a>
    </div>

    <table class="table table-hover admin-table">
    <thead>
    <tr>
        <th scope="col">{% trans %}name{% endtrans %}</th>
        <th scope="col">{% trans %}edit{% endtrans %}</th>
        <th scope="col">{% trans %}delete{% endtrans %}</th>
    </tr>
    </thead>
    {% for recipe in recipes %}
        <tbody>
        <tr>
            <td scope="row"><a href="{{ path('single_recipe', { 'id': recipe.id }) }}">{{ recipe.title }}</a></td>
            <td><a class="btn btn-outline-info" href="{{ path('admin_recipes_edit',{ id: recipe.id }) }}" >{% trans %}edit{% endtrans %}</a></td>
            <td><a class="btn btn-outline-danger" href="{{ path('admin_recepes_delete',{ id: recipe.id }) }}" >{% trans %}delete{% endtrans %}</a></td>
        </tr>
        </tbody>
    {% endfor %}
    </table>
{% endblock %}